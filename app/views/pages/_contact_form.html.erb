<%= form_for Contact.new do |c| %>
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-4 contact-info cta-message wow fadeInLeft">
			<address>
				<strong>microStore</strong><br>
				84 State Road 123<br>
				City, State 24813<br>
				(123) 456 - 7890<br>
				contact@companyname.com
			</address>
		</div>	

		<div class="col-xs-12 col-sm-12 col-md-8 wow fadeIn" >
		    <div class="form-group">
		        <%= c.label :nombre %>
		        <%= c.text_field :name, class: "form-control" %>
		    </div>
		    <div class="form-group">
		        <%= c.label :email %>
		        <%= c.text_field :email, class: "form-control" %>
		    </div>
		    <div class="form-group">
	            <%= c.label :mensaje %>
		        <%= c.text_field :message, class: "form-control" %>
		    </div>
			<p>

			<%= c.submit "Enviar Mensaje", class: "btn btn-store btn-block" %>

		</div>
	</div>
<% end %>